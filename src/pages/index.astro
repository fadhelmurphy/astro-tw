---
// Component Imports
import Button from "Components/Button.astro";
import Header from "Components/header";
import Timeline from "Components/timeline";
import { prefix } from "Consts/config";
import { portoList } from "Consts/portolist";
import { eduTimelineData } from "Consts/timeline";
import Layout from "Containers/layout";
import PortoList from "Containers/portoList";
import Sections from "Containers/sections";
// const condBg = import.meta.env.NODE_ENV === "production" ? "url(/revamp/home/bg.png)" : "url(/home/bg.png)";

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<!-- <style is:global define:vars={{ condBg }}>
	body {
	  background-image: var(--condBg);
	}
</style> -->
<Layout>
  <Header slot="Header"/>
  <Sections title="Work Experiences">
	<p slot="desc">I have previously worked for a few companies <br/>as a freelance and full-time front end developer.</p>
  <Timeline client:visible/>
  </Sections>
  <Sections type="education" title="Education">
  <Timeline type="education" data={eduTimelineData} client:visible/>
  </Sections>
  
  <Sections type="portfolio" title="App Development" client:only>
    <p slot="desc">
      Look what I've <br/>worked 
    </p>
    <PortoList data={portoList} client:only/>
    </Sections>
  <div class="container mx-5 md:mx-auto grid h-screen place-items-start content-center">
    <h2 class="text-5xl md:text-7xl font-semibold">Do you have something wonderful?</h2>
    <br/>
    <h2 class="text-5xl md:text-7xl font-semibold">Let's <span class="bg-gradient-to-r from-teal-500 to-[rgba(96,165,250,1)] text-transparent bg-clip-text">work together!</span></h2>
    <p class="text-2xl md:text-4xl font-normal my-5 text-base-2">fadhelijlalfalah@gmail.com</p>
    <Button>Get in touch</Button>
  </div>

  <style is:global>
    body {
      background-image: var(--bg-url-header-home);
    }
  </style>
</Layout>
